{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "plugins": [
      "mocha",
      "promise"
  ],
  "rules": {
    "arrow-body-style": 0,
    "class-methods-use-this": [0],
    "comma-dangle": 0,
    "id-length": 0,
    "import/extensions": 0,
    "import/no-named-as-default-member": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "indent": [2, 4],
    "jsx-a11y/anchor-has-content": "off",
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "linebreak-style": 0,
    "max-len": 0,
    "new-cap": 0,
    "no-restricted-imports": [2, "lodash"],
    "no-underscore-dangle": 0,
    "no-unused-vars": 2,
    "object-shorthand": 2,
    "padded-blocks": 2,
    "prefer-arrow-callback": 1,
    "prefer-const": 2,
    "promise/avoid-new": 2,
    "promise/no-native": 2,
    "promise/no-nesting": 1,
    "promise/no-return-wrap": 2
  }
}
